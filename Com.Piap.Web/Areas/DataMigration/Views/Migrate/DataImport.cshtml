
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>数据导入</title>
    <link href="~/Content/kendostyle/kendo.common.min.css" rel="stylesheet">
    <link href="~/Content/kendostyle/kendo.rtl.min.css" rel="stylesheet">
    <link href="~/Content/kendostyle/kendo.default.min.css" rel="stylesheet">

    <script src="~/Scripts/kendoui/jquery.min.js"></script>
    <script src="~/Scripts/kendoui/kendo.web.min.js"></script>
    <script src="~/Scripts/kendoui/kendo.aspnetmvc.min.js"></script>
    <style>
        * {
            margin: 0 auto;
            padding: 3px;
        }

        a, a:link {
            color: black;
            text-decoration: none;
        }
    </style>
</head>
<body>
    <div style="width:360px; height:180px; margin-top:100px;">
        <h1>数据导入</h1>
        <select id="importtype">
            <option value="@Url.Action("ImportClassification", "Migrate")">指标分类</option>
            <option value="@Url.Action("ImportCategory", "Migrate")">指标类目</option>
            <option value="@Url.Action("ImportIndexs", "Migrate")">指标定义</option>
            <option value="@Url.Action("ImportIndexValue", "Migrate")">源指标值</option>
        </select>
        <form method="post" action="@Url.Action("ImportClassification", "Migrate")">
            <div>
                <input name="files" id="files" type="file" />
                <input type="submit" value="上传" class="k-button" />
            </div>
        </form>
            <script>
                $(document).ready(function () {
                    $("#files").kendoUpload();
                    $("#importtype").kendoDropDownList({
                        change: onChange
                    });
                });

                function onChange() {
                    $("form").attr("action", $("#importtype").val());
                }
            </script>



</div>
</body>
</html>
